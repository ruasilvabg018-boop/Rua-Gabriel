  <style>
    :root {
      --bg: #f7f7f7;
      --panel: #4b4d8c;
      --text: #000000;
      --muted: #130b0a;
      --primary: #08080f;
      --primary-contrast: #f4f3f3;
      --border: #424448;
      --ring: #615959f3;

    }

    * {
      box-sizing: border-box;
    }

    html,
    body {
      height: 100%;
    }

    body {
      margin: 0;
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
      color: var(--text);
      background: var(--bg);
    }

    .container {
      max-width: 1100px;
      margin: 50px auto 80px;
      padding: 0 20px;
    }

    /* Header */
    .header {
      display: flex;
      align-items: center;
      gap: 14px;
      margin-bottom: 8px;
    }

    .logo {
      width: 28px;
      height: 28px;
      border-radius: 6px;
      display: grid;
      place-items: center;
      background: #031b32;
      color: #fff;
      font-weight: 700;
    }

    .title {
      font-size: 28px;
      font-weight: 700;
      letter-spacing: -0.01em;
    }

    .subtitle {
      color: var(--muted);
      margin: 0 0 18px 44px;
    }



    /* Tabs */
    .tabs {
      display: flex;
      gap: 3px;
      background: #eef0f6;
      padding: 0.1px;
      border-radius: 999px;
      width: fit-content;
      box-shadow: inset 0 0 0 1px #e5e7eb;
      margin-left: 0px;
    }

    .tab {
      border: 0;
      background: transparent;
      padding: 10px 18px;
      border-radius: 999px;
      cursor: pointer;
      font-weight: 600;
      color: #374151;
    }

    .tab[aria-selected="true"] {
      background: #fff;
      color: #172138;
      box-shadow: 0 1px 2px rgba(0, 0, 0, .06);
    }

    /* Card Section */
    .section {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 22px;
      margin-top: 22px;
      box-shadow: 0 1px 2px rgba(0, 0, 0, .03);
    }

    .section h2 {
      margin: 0 0 4px;
      font-size: 22px;
    }

    .section p {
      margin: 0 0 18px;
      color: var(--muted);
    }

    /* Actions */
    .actions {
      display: flex;
      justify-content: flex-end;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      border: 0;
      border-radius: 10px;
      padding: 10px 14px;
      font-weight: 600;
      cursor: pointer;
    }

    .btn.primary {
      background: var(--primary);
      color: var(--primary-contrast);
    }

    .btn.ghost {
      background: transparent;
      color: #180262;
    }

    .btn svg {
      width: 18px;
      height: 18px;
    }

    /* Table */
    .table-wrap {
      overflow: auto;
      border-radius: 12px;
      border: 1px solid var(--border);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
    }

    thead th {
      position: sticky;
      top: 0;
      background: #8d959a;
      border-bottom: 1px solid var(--border);
      text-align: left;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: .04em;
      color: #0d151b;
      padding: 12px 14px;
    }

    tbody td {
      padding: 14px;
      border-bottom: 1px solid var(--border);
      vertical-align: top;
    }

    tbody tr:hover {
      background: #fafafa;
    }

    /* Badges */
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: 12px;
      font-weight: 600;
      padding: 6px 10px;
      border-radius: 999px;
    }

    .type-cordas {
      background: var(--badge-cordas);
    }

    .type-teclas {
      background: var(--badge-teclas);
    }

    .type-percussao {
      background: var(--badge-percussao);
    }

    .type-sopro {
      background: var(--badge-sopro);
    }

    .cond-novo {
      background: var(--cond-novo);
    }

    .cond-otimo {
      background: var(--cond-otimo);
    }

    .cond-bom {
      background: var(--cond-bom);
    }

    .price {
      font-weight: 700;
    }

    .muted {
      color: var(--muted);
    }

    .actions-cell {
      white-space: nowrap;
    }

    .icon-btn {
      background: transparent;
      border: 0;
      padding: 8px;
      cursor: pointer;
      border-radius: 8px;
    }

    .icon-btn:hover {
      background: #f2f2f6;
    }

    .icon {
      width: 18px;
      height: 18px;
      color: #111827;
    }

    /* Modal */
    .modal-backdrop {
      position: fixed;
      inset: 0;
      background: rgba(13, 16, 23, .45);
      display: none;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .modal {
      width: min(720px, 100%);
      background: var(--panel);
      border-radius: 16px;
      border: 1px solid var(--border);
      box-shadow: 0 20px 60px rgba(0, 0, 0, .25);
    }

    .modal header {
      padding: 18px 22px 0;
    }

    .modal h3 {
      margin: 6px 0 10px;
    }

    .modal .content {
      padding: 0 22px 22px;
    }

    .modal .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 14px;
    }

    .modal .full {
      grid-column: 1 / -1;
    }

    label {
      display: block;
      font-size: 13px;
      font-weight: 600;
      color: #374151;
      margin-bottom: 6px;
    }

    input[type="text"],
    input[type="number"],
    textarea,
    select {
      width: 100%;
      padding: 12px 12px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: #f9fafb;
      outline: none;
      transition: box-shadow .15s ease, border-color .15s ease;
      font: inherit;
    }

    textarea {
      resize: vertical;
      min-height: 90px;
    }

    input:focus,
    textarea:focus,
    select:focus {
      border-color: #c7d2fe;
      box-shadow: 0 0 0 4px #c7d2fe55;
      background: #fff;
    }

    .field-help {
      font-size: 12px;
      color: var(--muted);
      margin-top: 6px;
    }

    .modal footer {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      padding: 14px 22px 22px;
      border-top: 1px dashed var(--border);
    }

    .close-x {
      position: absolute;
      right: 14px;
      top: 12px;
      background: transparent;
      border: 0;
      font-size: 22px;
      line-height: 1;
      cursor: pointer;
      color: #6b7280;
    }

    .close-x:hover {
      color: #111827;
    }

    /* Utilities */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    @media (max-width: 720px) {
      .modal .grid {
        grid-template-columns: 1fr;
      }

      .subtitle,
      .tabs {
        margin-left: 0;
      }

      .header {
        flex-wrap: wrap;
      }
    }

    .data {
      appearance: none;
      background-color: #fafafa;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px 12px;
      font-size: 14px;
      color: #000000;
      width: 100%;
      box-sizing: border-box;
      transition: border 0.3s ease, box-shadow 0.3s ease;
    }

    .data:focus {
      border-color: #888;
      outline: none;
      box-shadow: 0 0 0 2px rgba(7, 7, 86, 0.906);
    }
  </style>
</head>

